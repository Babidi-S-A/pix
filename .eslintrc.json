{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "eqeqeq": "error",
        "no-unused-vars": "warn",
        "no-redeclare": "error",
        "no-undef": "error",
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/explicit-module-boundary-types": "warn",
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ]
    }
}